{
  "name": "html-css-template",
  "version": "0.1.0",
  "private": true,
  "dependencies": {},
  "devDependencies": {
    "prettier": "1.18.2",
    "stylelint": "^11.0.0",
    "stylelint-config-recommended": "^3.0.0"
  },
  "scripts": {
    "format": "npx prettier  --write **/*.{html,js,json,md,json,yaml,yml,jsx}",
    "format:check": "npx prettier  --check **/*.{html,js,json,md,json,yaml,yml}",
    "lint": "npx stylelint **/*.css --fix",
    "lint:check": "npx stylelint **/*.css",
    "html-validator": "npx html-validator-cli --quiet --file  index.html"
  }
}
